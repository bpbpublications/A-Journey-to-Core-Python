# Membership Operators

# 1.	a=int(input("enter a number: "))
# 2.	b=input("enter a character: ")
# 3.	s1="hello python"
# 4.	l1= [1,12.4,22,73,4.4,90]  
# 5.	if ( a in l1 ): 
# 6.	   print (a," is available in the given list") 
# 7.	else: 
# 8.	   print (a," is not available in the given list")  
# 9.	if ( b not in s1 ): 
# 10.	   print (b," is not available in the given string") 
# 11.	else: 
# 12.	   print (b," is available in the given string")

# Identity Operators

# 1.	a = int(input("enter a: ")) 
# 2.	b = int(input("enter b: "))
# 3.	c = int(input("enter c: ")) 
# 4.	if ( a is b ): 
# 5.	   print ("a and b have same identity") 
# 6.	else: 
# 7.	   print ("a and b do not have same identity")  
# 8.	if ( id(a) == id(b) ): 
# 9.	   print ("a and b have same identity") 
# 10.	else: 
# 11.	   print ("a and b do not have same identity") 
# 12.	if ( a is not c ): 
# 13.	   print ("a and c do not have same identity") 
# 14.	else: 
# 15.	   print ("a and c have same identity")

# Operators Precedence

# 1.	a = 10
# 2.	b = 15 
# 3.	c = 20 
# 4.	d = 25 
# 5.	ans = (a + b) * c / d       
# 6.	print ("Value of (a + b) * c / d is ",  ans)  
# 7.	ans = ((a + b) * c) / d    
# 8.	print ("Value of ((a + b) * c) / d is ",  ans)  
# 9.	ans = (a + b) * (c / d)     
# 10.	print ("Value of (a + b) * (c / d) is ",  ans)  
# 11.	ans = a + (b * c) / d      
# 12.	print ("Value of a + (b * c) / d is ", ans)

