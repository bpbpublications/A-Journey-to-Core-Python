# Arithmetic Operators

# 1.	a=5
# 2.	b=3
# 3.	c=a+b
# 4.	print("addition of %d and %d is %d" %(a,b,c))
# 5.	c=a-b
# 6.	print("subtraction of %d and %d is %d" %(a,b,c))
# 7.	c=a*b
# 8.	print("multiplication of %d and %d is %d" %(a,b,c))
# 9.	c=a/b
# 10.	print("division of %d and %d is %f" %(a,b,c))
# 11.	c=a%b
# 12.	print("modulus of %d and %d is %d" %(a,b,c))
# 13.	c=a**b
# 14.	print("exponent of %d and %d is %d" %(a,b,c))
# 15.	c=a//b
# 16.	print("floor division of %d and %d is %d" %(a,b,c))

# Relational Operators

# 1. 	a=5
# 2.	b=10
# 3.	if(a==b): 
# 4.	    print("a is equal to b")
# 5.	else:
# 6.	    print("a is not equal to b")
# 7.	if(a!=b):
# 8.	    print("a is not equal to b")
# 9.	else:
# 10.	    print("a is equal to b")   
# 11.	if(a<b):
# 12.	    print("a is less to b")
# 13.	else:
# 14.	    print("a is not less to b")
# 15.	if(a>b):
# 16.	    print("a is greater to b")
# 17.	else:
# 18.	    print("a is not greater to b")    
# 19.	if(a<=b):
# 20.	    print("a is either less than nor equal to b")              
# 21.	else:
# 22.	    print("a is neither less than nor equal to b")
# 23.	if(a>=b):
# 24.	    print("a is either greater than nor equal to b")
# 25.	else:
# 26.	    print("a is neither greater than nor equal to b")

