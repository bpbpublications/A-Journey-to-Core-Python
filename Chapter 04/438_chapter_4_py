# Bitwise Operators

# 1.	a = 0011 1100 
# 2.	b = 0000 1101 
# 3.	----------------- 
# 4.	a&b = 0000 1100 
# 5.	a|b = 0011 1101 
# 6.	a^b = 0011 0001 
# 7.	~a  = 1100 0011 

# 1.	a = 60            # 60 = 0011 1100 
# 2.	b = 13            # 13 = 0000 1101 
# 3.	print ('a=',a,':',bin(a),'b=',b,':',bin(b)) 
# 4.	c = 0  
# 5.	c = a & b;        # 12 = 0000 1100 
# 6.	print ("result of AND is ", c,':',bin(c))  
# 7.	c = a | b;        # 61 = 0011 1101  
# 8.	print ("result of OR is ", c,':',bin(c))     
# 9.	c = a ^ b;        # 49 = 0011 0001 
# 10.	print ("result of EXOR is ", c,':',bin(c))

